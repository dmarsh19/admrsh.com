[Unit]
Description="uWSGI server instance configured to serve flask_uwsgi"
After=syslog.target

[Service]
ExecStart=/usr/local/bin/uwsgi --ini /var/www/flask_uwsgi/flask_uwsgi.ini --uid www-data --gid www-data
# Requires systemd version 211 or newer
RuntimeDirectory=uwsgi
KillSignal=SIGQUIT
Restart=always
Type=notify
StandardError=syslog
NotifyAccess=all


[Install]
WantedBy=multi-user.target


setuid www-data
setgid www-data

env PATH=/usr/local/bin
chdir /var/www/flask_uwsgi
exec uwsgi 